<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.karam.demo1.splash_layout"
    android:background="@drawable/gradient_rect"
    >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUPPORT GROUP"
        android:textSize="30dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:id="@+id/first_text" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anything is possible when you have"
        android:textSize="15dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/first_text"
        android:id="@+id/sec_text"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="the right people there to support you."
        android:textSize="15dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sec_text"
        android:id="@+id/third_text"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/third_text"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="HELP"
            android:id="@+id/help_id"

            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/help_id"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="ADVICE"
        android:id="@+id/advice_id"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/advice_id"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="SUPPORT"
        android:id="@+id/support_id"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/support_id"
        android:textColor="#fff"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="GUIDANCE"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">

     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="LOGIN"
         android:textColor="#000"
         android:layout_weight="1"
         android:background="#e7a0a0"
         android:textSize="20dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:onClick="login"
         android:id="@+id/button_login"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:layout_weight="1"
            android:background="#dc638b"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:textSize="20dp"
            android:onClick="signup"
            android:id="@+id/button_signup"
             />

    </LinearLayout>




</RelativeLayout>
